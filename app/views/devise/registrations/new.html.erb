<header id='header-2'>
  <%= link_to new_user_session_path, class: 'back-arrow' do %>
    &#10132;
  <% end %>
  <h1>Register</h1>
</header>
<% if resource.errors.full_messages.any? %>
<div class="alert alert-danger" role="alert">
<%= render "devise/shared/error_messages", resource: resource %>
</div>
<% end %>
<section class='trans-con'>
  <div class='add-trans'>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", :required => true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :required => true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", :required => true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :required => true %>
  </div>

  <div class='btn-con'>
    <%= f.submit "Sign up", class: 'submit-button' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</section>